class Kitchen(Room):
    
    TITLE = 'Kitchen'

    def __init__(self, size):
        self.__size = size
        self.__purpose = 'To eat'

class Bedroom(Room):

    TITLE = 'Bedroom'

    def __init__(self, size):
        self.__size = size
        self.__purpose = 'To sleep'

class Bathroom(Room):
    
    TITLE = 'Bathroom'

    def __init__(self, size):
        self.__size = size
        self.__purpose = 'To wash'


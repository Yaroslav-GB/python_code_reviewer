class Kitchen:
    
    TITLE = 'Kitchen'

    def __init__(self, size):
        self.__size = size
        self.__purpose = 'To eat'
        
    def get_size(self):
        return self.__size

class Bedroom:

    TITLE = 'Bedroom'

    def __init__(self, size):
        self.__size = size
        self.__purpose = 'To sleep'
        
    def get_size(self):
        return self.__size

class Bathroom:
    
    TITLE = 'Bathroom'

    def __init__(self, size):
        self.__size = size
        self.__purpose = 'To wash'
        
    def get_size(self):
        return self.__size

